<!-- This is used for layouting the project -->
<%- include("header") -%>

    <!-- Creating template using EJS module of JS -->

    <!-- <% %> it's a sriptlet tag used to write code inside it and it will only work line by line and it doesn't work on html code -->
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    

    <div class="box">
    <% newlistItems.forEach(function(item){%>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="deleteCheckbox" value=<%= item._id%> onChange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%=listTitle %>"></input>
        </form>
        
        <% } )%>
            <form class="item" action="/" method="post">
                <input type="text" name="newItem" id="name" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
               </form>
       
    </div>



